{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jasmine", "node", "puppeteer", "path"],
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "spec/**/*.ts",
    "spec/**/*.tsx",
    "e2e/**/*.ts",
    "**/*.config.ts",
    "**/*.setup.ts",
    "habr-tests/src/**/*.ts"  // сохраняем твой путь
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}