{
  "category": "smoke",
  "name": "Smoke Tests",
  "description": "Набор критичных smoke-тестов для проверки основной функциональности Habr.com",
  "tests": [
    {
      "id": "SMOKE-001",
      "name": "Загрузка главной страницы",
      "description": "Проверка, что главная страница Habr загружается корректно",
      "steps": [
        "Открыть https://habr.com",
        "Дождаться загрузки страницы",
        "Проверить заголовок страницы",
        "Проверить наличие основных элементов"
      ],
      "expected": "Страница загружается, заголовок содержит 'Habr', основные элементы отображаются",
      "severity": "blocker",
      "priority": 1,
      "tags": ["habr", "smoke", "critical"]
    },
    {
      "id": "SMOKE-002",
      "name": "Отображение логотипа",
      "description": "Проверка, что логотип Habr отображается на странице",
      "steps": [
        "Найти элемент логотипа",
        "Проверить его видимость",
        "Проверить атрибут alt",
        "Сделать скриншот"
      ],
      "expected": "Логотип отображается, имеет корректный alt текст",
      "severity": "critical",
      "priority": 1,
      "tags": ["habr", "smoke", "ui"]
    },
    {
      "id": "SMOKE-003",
      "name": "Навигационное меню",
      "description": "Проверка навигационного меню сайта",
      "steps": [
        "Найти навигационное меню",
        "Проверить видимость всех разделов",
        "Проверить корректность ссылок",
        "Проверить активное состояние"
      ],
      "expected": "Навигационное меню отображается, все разделы доступны",
      "severity": "critical",
      "priority": 1,
      "tags": ["habr", "smoke", "navigation"]
    },
    {
      "id": "SMOKE-004",
      "name": "Кнопка входа",
      "description": "Проверка кнопки входа в систему",
      "steps": [
        "Найти кнопку входа",
        "Проверить её видимость",
        "Проверить текст кнопки",
        "Проверить ссылку"
      ],
      "expected": "Кнопка входа отображается, ведет на страницу авторизации",
      "severity": "normal",
      "priority": 2,
      "tags": ["habr", "smoke", "auth"]
    },
    {
      "id": "SMOKE-005",
      "name": "Список статей",
      "description": "Проверка загрузки списка статей на главной",
      "steps": [
        "Найти контейнер со статьями",
        "Проверить наличие статей",
        "Проверить структуру статьи (заголовок, автор, теги)",
        "Посчитать количество статей"
      ],
      "expected": "Список статей загружается, каждая статья содержит заголовок, автора и теги",
      "severity": "critical",
      "priority": 1,
      "tags": ["habr", "smoke", "content"]
    }
  ],
  "qualityGates": {
    "successRate": 100,
    "maxDuration": 60,
    "screenshotOnFailure": true,
    "retryOnFailure": false
  },
  "metadata": {
    "owner": "QA Team",
    "lastUpdated": "2024-01-15",
    "version": "1.0",
    "coverage": "Основная функциональность"
  }
}