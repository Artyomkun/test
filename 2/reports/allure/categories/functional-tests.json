{
    "category": "functional",
    "name": "Functional Tests",
    "description": "Функциональные тесты поиска, фильтрации и работы со статьями",
    "tests": [
        {
            "id": "FUNC-001",
            "name": "Поиск статей",
            "description": "Проверка функционала поиска статей на Habr",
            "testCases": [
                {
                    "name": "Поиск по запросу 'TypeScript'",
                    "steps": [
                        "Открыть поиск",
                        "Ввести 'TypeScript'",
                        "Нажать Enter",
                        "Дождаться результатов",
                        "Проверить наличие результатов"
                    ],
                    "data": {
                        "query": "TypeScript",
                        "minResults": 5
                    },
                    "expected": "Поиск возвращает результаты, содержащие TypeScript"
                },
                {
                    "name": "Поиск по запросу 'React'",
                    "steps": [
                        "Ввести 'React' в поиск",
                        "Выполнить поиск",
                        "Проверить результаты"
                    ],
                    "data": {
                        "query": "React",
                        "minResults": 3
                    },
                    "expected": "Найдены статьи по React"
                },
                {
                    "name": "Поиск по запросу 'Docker'",
                    "steps": [
                        "Выполнить поиск Docker",
                        "Анализировать результаты"
                    ],
                    "data": {
                        "query": "Docker",
                        "minResults": 2
                    },
                    "expected": "Найдены статьи по Docker"
                }
            ],
            "severity": "critical",
            "priority": 1,
            "tags": ["habr", "search", "functional"]
        },
        {
            "id": "FUNC-002",
            "name": "Открытие статьи",
            "description": "Проверка открытия и чтения статей",
            "testCases": [
                {
                "name": "Открыть первую статью из списка",
                "steps": [
                    "Найти первую статью в списке",
                    "Кликнуть на заголовок",
                    "Дождаться загрузки статьи",
                    "Проверить содержимое статьи"
                ],
                "expected": "Статья открывается, содержимое загружается"
                }
            ],
            "severity": "normal",
            "priority": 2,
            "tags": ["habr", "articles", "content"]
        },
        {
            "id": "FUNC-003",
            "name": "Сортировка статей",
            "description": "Проверка сортировки статей по рейтингу и дате",
            "testCases": [
                {
                "name": "Сортировка по рейтингу",
                "steps": [
                    "Открыть dropdown сортировки",
                    "Выбрать 'По рейтингу'",
                    "Дождаться обновления списка",
                    "Проверить порядок статей"
                ],
                "expected": "Статьи отсортированы по убыванию рейтинга"
                },
                {
                "name": "Сортировка по дате",
                "steps": [
                    "Выбрать сортировку по дате",
                    "Проверить порядок статей"
                ],
                "expected": "Статьи отсортированы по дате (новые первые)"
                }
            ],
            "severity": "normal",
            "priority": 3,
            "tags": ["habr", "sorting", "functional"]
        },
        {
            "id": "FUNC-004",
            "name": "Фильтрация по времени",
            "description": "Проверка фильтрации статей по временным периодам",
            "testCases": [
                {
                "name": "Фильтр 'За неделю'",
                "steps": [
                    "Применить фильтр 'За неделю'",
                    "Проверить URL",
                    "Проверить список статей"
                ],
                "expected": "Отображаются статьи за последнюю неделю"
                },
                {
                "name": "Фильтр 'За месяц'",
                "steps": [
                    "Применить фильтр 'За месяц'",
                    "Проверить результаты"
                ],
                "expected": "Отображаются статьи за последний месяц"
                }
            ],
            "severity": "normal",
            "priority": 3,
            "tags": ["habr", "filtering", "time"]
        }
    ],
    "qualityGates": {
        "successRate": 90,
        "maxDuration": 120,
        "screenshotOnFailure": true,
        "retryOnFailure": true,
        "retryCount": 2
    },
    "dependencies": [
        "SMOKE-001",
        "SMOKE-005"
    ],
    "metadata": {
        "owner": "QA Team",
        "lastUpdated": "2024-01-15",
        "version": "1.0",
        "coverage": "Поиск, фильтрация, сортировка"
    }
}