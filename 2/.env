# ============================================
# НАСТРОЙКИ БРАУЗЕРА
# ============================================

# Режим запуска браузера:
# true - без интерфейса (headless, для CI)
# false - с интерфейсом (headed, для разработки)
HEADLESS=false

# Замедление действий (миллисекунды)
# Полезно для отладки - видеть что происходит
SLOWMO=50

# Включить DevTools при запуске
# true - открыть инструменты разработчика
DEVTOOLS=false

# Игнорировать ошибки SSL/HTTPS
IGNORE_HTTPS_ERRORS=true

# ============================================
# НАСТРОЙКИ ТЕСТОВ
# ============================================

# Таймаут для тестов (миллисекунды)
TEST_TIMEOUT=30000

# Окружение CI/CD
CI=false

# Режим отладки
DEBUG=false

# Уровень логирования (0-3)
LOG_LEVEL=1

# ============================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ (HABR)
# ============================================

# Базовый URL тестируемого сайта
BASE_URL=https://habr.com

# Язык интерфейса
LANG=ru

# Пользовательский агент
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ============================================
# НАСТРОЙКИ СКРИНШОТОВ И ОТЧЕТОВ
# ============================================

# Сохранять скриншоты при падении тестов
CAPTURE_SCREENSHOTS_ON_FAILURE=true

# Сохранять скриншоты при успешных тестах
CAPTURE_SCREENSHOTS_ON_SUCCESS=false

# Каталог для скриншотов
SCREENSHOTS_DIR=./screenshots

# Каталог для отчетов
REPORTS_DIR=./reports

# Формат отчетов (json, html, junit)
REPORT_FORMAT=html

# ============================================
# ТЕСТОВЫЕ ДАННЫЕ (ЗАПОЛНИТЕ ПРИ НЕОБХОДИМОСТИ)
# ============================================

# Тестовый пользователь для авторизации
# ВАЖНО: Не используйте реальные учетные данные!
# Создайте тестовый аккаунт на Habr для тестов
TEST_USER_EMAIL=test_user@example.com
TEST_USER_PASSWORD=TestPassword123!
TEST_USER_USERNAME=test_user_automation

# Тестовый email для регистрации (должен быть уникальным)
TEST_REGISTER_EMAIL=automation_test_${TIMESTAMP}@example.com

# ============================================
# ПРОКСИ И СЕТЕВЫЕ НАСТРОЙКИ
# ============================================

# Прокси сервер (если требуется)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=http://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1

# Таймаут сетевых запросов (миллисекунды)
NETWORK_TIMEOUT=30000

# Ждать завершения сетевых запросов
WAIT_UNTIL_NETWORK=networkidle2

# ============================================
# РАЗРЕШЕНИЕ ЭКРАНА
# ============================================

# Разрешение окна браузера
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Масштаб
DEVICE_SCALE_FACTOR=1

# Мобильный режим (true/false)
IS_MOBILE=false

# ============================================
# ПАРАМЕТРЫ ПРОИЗВОДИТЕЛЬНОСТИ
# ============================================

# Максимальное параллельных тестов
MAX_PARALLEL_TESTS=1

# Использовать кэш
USE_CACHE=true

# Пауза между тестами (миллисекунды)
TEST_PAUSE=1000

# ============================================
# ФЛАГИ ДЛЯ ОПРЕДЕЛЕННЫХ ТЕСТОВ
# ============================================

# Запускать тесты авторизации
RUN_AUTH_TESTS=true

# Запускать тесты поиска
RUN_SEARCH_TESTS=true

# Запускать тесты навигации
RUN_NAVIGATION_TESTS=true

# Пропускать тесты с внешними зависимостями
SKIP_EXTERNAL_TESTS=false