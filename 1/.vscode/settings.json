{
    // Python
    "python.terminal.activateEnvironment": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["-v", "--cov=function", "--cov-report=term-missing"],
    
    // Java
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic", 
    "java.project.importOnFirstTimeStartup": "automatic",
    "java.configuration.maven.userSettings": "~/.m2/settings.xml",
    
    // Maven
    "maven.executable.path": "mvn",
    "maven.terminal.customEnv": [
        {"environmentVariable": "JAVA_HOME", "value": "${env:JAVA_HOME}"}
    ],
    "maven.pomfile.autoUpdateEffectivePOM": true,
    "maven.view": "flat",
    
    // C
    "C_Cpp.default.cStandard": "c17", 
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    
    // C++
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "windows-clang-x64",
    "C_Cpp.default.compilerPath": "clang++",
    
    // C/C++ конфигурации
    "C_Cpp.configurations": [
        {
            "name": "Linux GCC (C)",
            "compilerPath": "/usr/bin/gcc",
            "intelliSenseMode": "linux-gcc-x64",
            "cStandard": "c17"
        },
        {
            "name": "Windows Clang (C++)", 
            "compilerPath": "clang++",
            "intelliSenseMode": "windows-clang-x64",
            "cppStandard": "c++17"
        }
    ],

    // C# - .NET 9.0 
    "dotnet.enablePackageRestore": true,
    "dotnet.generateAssetsLogFile": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.useModernNet": true,    
    
    // TypeScript/JavaScript
    "typescript.preferences.includePackageJsonAutoImports": "auto",
    "typescript.preferences.autoImportFileExports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    
    // Jest Testing
    "jest.autoRun": {"watch": false, "onSave": "test-file"},
    "jest.showCoverageOnLoad": true,
    "jest.runAllTestsFirst": false,
    "jest.debugMode": false,
    
    // Jest для TypeScript
    "jest.jestCommandLine": "npm test --",
    "jest.enable": true,
    
    // JavaScript/TypeScript Testing
    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    
    // Go
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    
    // Rust
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.cargo.buildScripts.enable": true,
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.cargo.features": "all",
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.cargo.noDefaultFeatures": false,
    
    // Cargo - система сборки Rust
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.cargo.runBuildScripts": true,
    "rust-analyzer.cargo.target": null, 
    "rust-analyzer.cargo.extraArgs": [],
    
    // Форматирование Rust
    "rust-analyzer.rustfmt.extraArgs": [],
    "rust-analyzer.rustfmt.overrideCommand": null,
    
    // Анализ кода Rust
    "rust-analyzer.diagnostics.disabled": [],
    "rust-analyzer.diagnostics.warningsAsInfo": [],
    "rust-analyzer.diagnostics.enable": true,
    
    // Дополнительные настройки Rust
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.implementations": true,
    "rust-analyzer.lens.run": true,
    "rust-analyzer.lens.debug": true,
    
    "rust-analyzer.hover.actions.enable": true,
    "rust-analyzer.hover.actions.debug.enable": true,
    "rust-analyzer.hover.actions.gotoTypeDef.enable": true,
    "rust-analyzer.hover.actions.implementations.enable": true,
    
    // Настройки компиляции
    "rust-analyzer.cargo.buildCommand": "build",
    "rust-analyzer.cargo.testCommand": "test",
    
    // Dart
    "dart.checkForSdkUpdates": true,
    "dart.debugExternalLibraries": true,
    
    // Ruby
    "ruby.useLanguageServer": true,
    "ruby.intellisense": "rubyLocate",
    "ruby.format": "rubocop",
    
    // PHP
    "php.suggest.basic": false,
    
    // Kotlin
    "kotlin.languageServer.enabled": true,
    "kotlin.languageServer.path": "",
    "kotlin.debugAdapter.enabled": true,
    "kotlin.compiler.jvm.target": "17",
    "kotlin.externalSources.autoConvertToKotlin": true,

    // Gradle  
    "gradle.native.autoDetect": "on",
    "gradle.java.home": "${env:JAVA_HOME}",
    "gradle.jvmArgs": "-Xmx4g",
    "gradle.reuseTerminals": "all",
    "gradle.scriptChecksums": [],

    // Kotlin with Gradle
    "kotlin.android.import.enabled": true,
    "kotlin.gradle.script.configurations": ["compileClasspath", "testCompileClasspath"],
    
    // Swift
    "swift.path.swiftDriver": "",
    
    // R
    "r.lsp.enabled": true,
    
    // Lua
    "lua.workspace.checkThirdParty": true,
    
    // Perl
    "perl.enable": true,
    
    // Ассоциации файлов
    "files.associations": {
        "*.ts": "typescript",
        "*.java": "java",
        "*.py": "python",
        "*.cpp": "cpp",
        "*.h": "cpp",
        "*.c": "c",
        "*.go": "go",
        "*.rs": "rust",
        "*.dart": "dart",
        "*.rb": "ruby",
        "*.php": "php",
        "*.kt": "kotlin",
        "*.swift": "swift",
        "*.r": "r",
        "*.lua": "lua",
        "*.pl": "perl",
        "*.pm": "perl",
        "*.cs": "csharp"
    },
    
    // Форматирование
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    
    // Терминал
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    
    // Отладка
    "debug.onTaskErrors": "showErrors",
    "debug.internalConsoleOptions": "openOnSessionStart",
    
    // Рабочая область
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/target": true,
        "**/.dart_tool": true,
        "**/*.exe": true,
        "**/*.o": true,
        "**/bin": true,
        "**/obj": true
    },
    
    // Прочие настройки
    "files.autoSave": "afterDelay",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false
}